<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.QueryPage"
             Title="QueryPage">
    <VerticalStackLayout>
        <Button
            x:Name="LogoutButton"
            Text="Logout"
            SemanticProperties.Hint="Click to Logout"
            Clicked="OnLogoutButtonClicked"
            HorizontalOptions="End"
            Margin="10,10,10,10"
            ></Button>
        <Label
            x:Name="InfoText"
            Text="Enter Last Name for Query"
            Style="{StaticResource SubHeadline}"
            SemanticProperties.HeadingLevel="Level3" 
            Margin="0,90,0,0"/>


        <Entry x:Name="NameEntryBox"
            Placeholder="McHendry"
            VerticalOptions="Center"
            HorizontalOptions="FillAndExpand"
            Margin="0,10,0,0"/>
        
        <Button
                x:Name="QueryButton"
                Text="Submit"
                SemanticProperties.Hint="Click to query last name"
                Clicked="OnQueryButtonClicked"
                HorizontalOptions="Center"
                Margin="0,10,0,0"
                ></Button>
    </VerticalStackLayout>
</ContentPage>